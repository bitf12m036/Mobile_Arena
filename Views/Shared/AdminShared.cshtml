@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="~/Content/image/logo.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>Mobile Arena Admin</title>


</head>
<body style="background-image:url(../Content/image/bg03.jpg); background-repeat:repeat">
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-6">
                    <h1 class="embed-responsive-item" style="color:skyblue; font-size:5em; font-weight:bolder; font-family:'Bradley Hand ITC'; margin-left:1.5em">Mobile Arena</h1>
                </div>
                <div class="col-lg-3">
                    <h3 class="embed-responsive-item" style="color:skyblue; font-size:2em;margin-top:2em">[ Admin Panel ]</h3>
                </div>
            </div>
        </div>
        <div id="navBtn" class="pull-right" style="margin-right:4em; margin-top:2em; ">
            <a href="~/Admin/ManageProfile"><input class="btn bg-primary" type="submit" value="Profile" style="margin-right:0.5em;" /></a>
            <a href="~/Admin"><input class="btn btn-group " type="submit" value="Logout" /></a>
        </div>
    </div>
    <nav class="nav navbar-inverse " style="background-color:aliceblue">
        <div class="row">
            <div class="col-lg-7">
                <ul class="nav navbar-nav" id="navHover" style="color:black; font-size:2.5em; font-family:Algerian;margin-left:2em">

                    <li >
                        @Html.ActionLink("UPDATE MOBILE", "UpdateMobile", "Admin")
                    </li>

                    <li>
                        @Html.ActionLink("MANAGE CLIENT", "ManageClient", "Admin")
                    </li>
                    <li style="margin-right:1em">
                        @Html.ActionLink("MANAGE BRAND", "ManageBrand", "Admin")
                    </li>
                </ul>
            </div>
            
        </div>
    </nav>
    @RenderBody();

    <br />
    <br />
    <br />
    <div style="background-image:url(../../Content/image/subBg/bg4.jpg);text-align: center; color:black;opacity:0.8" class="navbar-inverse bottom;">
        <h3 class="list-inline small" style="font-size:2em; padding-top:1em">Copyright &copy; 2015. Design by  Farhan Aamir</h3>
        <h3 class="list-inline small" style="font-size:2em; padding-bottom:1em">BITT12M036</h3>

    </div>
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>


</body>
</html>