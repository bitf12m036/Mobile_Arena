@{
    Layout = "~/Views/Shared/AdminShared.cshtml";
}
@using Term_Project.Models
@model List<Mobile>
<div>
    <div class="row">
        <div class="col-lg-6">
            <h1 style="color:burlywood; font-size:10em; font-weight:bold; font-family:'Angsana New'; margin-right:1.5em">Mobile Details</h1>
        </div>
        
        <div class="col-lg-6 col-lg-offset-10">
            <a href="~/Admin/AddNewMobile"><input class="btn btn-info btn-lg" style="margin-bottom:0.5em" type="submit" value="Add New Mobile" /></a>
        </div>
    </div>
        <div class="col-lg-12 col-sm-offset-0" >
            <table class="table table-responsive table-bordered table-condensed table-striped" style="background-color:lightsteelblue; ">

                <tr style="width:3em">
                    <th style="color:chocolate; font-weight:bolder;font-size:4em">
                        All Mobiles List
                    </th>

                </tr>

            @foreach(Mobile x in Model)
            {
                <tr style="font-size:3em">
                    <td style="color:black">
                        Model
                    </td>
                    <td style="color:black">
                        @(x.Company) 
                    </td>
                    <td style="color:black">
                        
                        @(x.Model) 
                    </td>
                    <td style="color:black">
                        
                        @(x.Price)
                    </td>
                    <td style="color:black">
                        
                        <a href="~/Admin/ChangeMobile?MModel=@(x.Model)" style="color:chocolate">Edit</a>
                    </td>
                    <td style="color:black">
                        
                        <a href="~/Admin/RemoveMobile?MModel=@(x.Model)" style="color:chocolate">Delete</a>
                    </td>
                </tr> 
            }
            </table>
        </div>
    </div>