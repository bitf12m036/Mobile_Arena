@{
    Layout = "~/Views/Shared/AdminShared.cshtml";
}

<!DOCTYPE html>

@using Term_Project.Models
@model List<Feedback>
<div>
    <div class="row">
        <div class="col-lg-6">
            <h1 style="color:burlywood; font-size:10em; font-weight:bold; font-family:'Angsana New'; margin-right:1.5em">User Feedbacks</h1>
        </div>

    </div>

    @if (Model != null)
    {
        <div class="col-lg-12 col-sm-offset-0">
            <table class="table table-responsive table-bordered table-condensed table-striped" style="background-color:lightsteelblue; ">

                <tr style="width:3em">
                    <th style="color:chocolate; font-weight:bolder;font-size:4em">
                        All Feedbacks List
                    </th>

                </tr>
                <tr style="color:azure; font-size:4em">
                    <td >
                        Username
                    </td>
                    <td >
                        E-mail
                    </td>
                    <td >
                        Message
                    </td>
                </tr>
                @foreach (Feedback x in Model)
                {
                <tr style="font-size:3em">
                    <td style="color:black">
                        @x.Name
                    </td>
                    <td style="color:black">
                        @(x.Email)
                    </td>
                    <td style="color:black">
                        @(x.Message)
                    </td>
                </tr>
                }
            </table>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>
    }
    else
    {
           <h4 style="color:wheat">No Feedback(s) to Show</h4>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />              
    }

</div>

