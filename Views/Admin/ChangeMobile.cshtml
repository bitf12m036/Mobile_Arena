@{
    Layout = "~/Views/Shared/AdminShared.cshtml";
}
@model Term_Project.Models.Mobile

<div>
    <div class="row">
        <div class=" col-lg-7">
            <img class="img-rounded" height="600" width="800" style="padding-left:5em; padding-top:5em" src="~/Content/image/phone/@(Model.ImageId)"  />
        </div>
        <div class="col-lg-5 ">
            <h1 style="color:burlywood; font-size:10em; font-weight:bold; font-family:'Angsana New'; margin-right:1.5em">Update Mobile</h1>
            <form class="form-horizontal" style="opacity:0.6;" action="~/Admin/SaveMobileChanges" method="post">

                <div class="row">

                    <div class="form-group">
                        <label for="name" style="color:white; font-size:2em" class="col-sm-4 control-label">Company</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="name" value="@Model.Company" name="Company" required placeholder="Company">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" style="color:white;font-size:2em" class="col-sm-4 control-label">Model</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="name" value="@Model.Model" name="Model" required placeholder="Mbile Model">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" style="color:white;font-size:2em" class="col-sm-4 control-label">Price</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="email" value="@Model.Price" name="Price" required placeholder="Price">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="pass" style="color:white;font-size:2em" class="col-sm-4 control-label">RAM</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="pass1" value="@Model.RAM" name="RAM" required placeholder="RAM">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="pass" style="color:white;font-size:2em" class="col-sm-4 control-label">ROM</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="pass2" value="@Model.ROM" name="ROM" required placeholder="ROM">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">Screen</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.Screen" name="Screen" required placeholder="Screen Size">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">Processor</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.Processor" name="Processor" required placeholder="Processor">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">Operating System</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.OSType" name="OSType" required placeholder="OS">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">OS Model</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.OSModel" name="OSModel" required placeholder="Version">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">Primary Camera</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.PrimaryCamera" name="PrimaryCamera" required placeholder="Primary Camera">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">Secondary Camera</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.SecandaryCamera" name="SecandaryCamera" required placeholder="Secondary Camera">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">Rating</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.Rating" name="Rating" required placeholder="Rating">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">ImageId</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.ImageId" name="ImageId" required placeholder="ImageId">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add" style="color:white;font-size:2em" class="col-sm-4 control-label">Arrival</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="add" value="@Model.Arrival" name="Arrival" required placeholder="Arrival">
                        </div>
                    </div>
                    <div class=" btn-group" style="margin-left:10em">
                        <div class="col-sm-4">
                            <input type="submit" class="btn btn-success" value="Update Mobile">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>