@{
    Layout = "~/Views/Shared/AdminShared.cshtml";
}
@using Term_Project.Models
@model List<string>
<div>
    <div class="row">
        <div class="col-lg-6">
            <h1 style="color:burlywood; font-size:10em; font-weight:bold; font-family:'Angsana New'; margin-right:1.5em">Brand Details</h1>
        </div>

        <div class="col-lg-6 col-lg-offset-10">
            <a href="~/Admin/AddNewBrand"><input class="btn btn-info btn-lg" style="margin-bottom:0.5em" type="submit" value="Add New Brand" /></a>
        </div>
    </div>
    <div class="col-lg-12 col-sm-offset-0">
        <table class="table table-responsive table-bordered table-condensed table-striped" style="background-color:lightsteelblue; ">

            <tr style="width:3em">
                <th style="color:chocolate; font-weight:bolder;font-size:4em">
                    All Brands List
                </th>

            </tr>

            @foreach (string x in Model)
            {
                <tr style="font-size:3em">
                    <td style="color:black">
                        Brand
                    </td>
                    <td style="color:black">
                        @(x)
                    </td>
                    
                    <td style="color:black">
                        <a href="~/Admin/RemoveBrand?company=@(x)" style="color:chocolate">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
