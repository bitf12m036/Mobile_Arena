@{
    Layout = "~/Views/Shared/ClientShared.cshtml";
}

@model Term_Project.Models.User
<br />
<br />
<br />
<br />
<div>
    <div class="row">
        <div class=" col-lg-7">
            <img class="img-responsive img-responsive" src="~/Content/image/Profile04.jpg" style="padding-left:3em">
        </div>
        <div class="col-lg-5 " padding-left:3em">
            <h1 style="color:burlywood; font-size:10em; font-weight:bold; font-family:'Angsana New'; margin-right:1.5em">Update Profile</h1>
            
                @using (Html.BeginForm("SaveUpdatedProfile", "Client", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <fieldset>
                        <!--<form class="form-horizontal" action="~/Client/AddClient" method="post">-->
                        <div class="row">

                            <div class="form-group">
                                @Html.LabelFor(model => model.FirstName, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label" })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", value = Model.FirstName })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.FirstName)
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.LastName, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label" })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", value = Model.LastName })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.LastName)
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label" })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", value = Model.Email, Type= "email" })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label",  })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", value = Model.Password, Type = "password" })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ConfirmPassword, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label" })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", value = Model.Password, Type = "password" })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DateOfBirth, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label" })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", value = Model.DateOfBirth, Type = "date" })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.DateOfBirth)
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.City, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label" })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", value = Model.City })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.City)
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Country, new { style = "font-size:15px; color:white", @class = "col-sm-4 control-label" })

                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control", value = Model.Country })
                                    <div style="color:yellow;font-size:1.5em">
                                        @Html.ValidationMessageFor(model => model.Country)
                                    </div>

                                </div>
                            </div>


                            <div class=" btn-group" style="margin-left:10em">

                                <div class="col-sm-4">
                                    <input type="submit" class="btn btn-success" value="Save Update">
                                </div>
                            </div>


                        </div>
                    </fieldset>
                }
        </div>
    </div>

</div>
