@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="~/Content/image/logo.ico" />
    <script src="~/Content/bootstrap.js" type="text/javascript"></script>
    <title>Login</title>
</head>
<body style="background-image:url(../Content/image/bg03.jpg); background-repeat:repeat">
    <div class="row">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    <h1 style="color:skyblue; font-size:3em; font-weight:bold; font-family:'Bradley Hand ITC'; margin-left:1.5em">Mobile Arena </h1>
                </div>

                <div class="col-lg-3" style="margin-top:2em;margin-left:10em ">
                    <a href="~/Home/Index"><h5 style="color:skyblue">Go back Home</h5></a>
                </div>
            </div>

        </div>

        <div class="col-lg-3 ">
            <h1 style="padding-left:7em;color:burlywood; font-size:3em; font-weight:bold; font-family:'Angsana New'; ">Login</h1>
        </div>
        <div class="col-lg-3" style="margin-top:2em; padding-left:13em">
            <a href="~/Home/SignUp"><input type="submit" class="btn btn-primary" value="Sign Up" /></a>
        </div>
    </div>
   

    <hr />
    <br />
    
        
        <div class="row">
            <div class=" col-lg-7">
                <img class="img-rounded img-responsive" src="~/Content/image/phone/m011.jpg" height="450" width="900" style="padding-left:3em">
            </div>
            <div class="col-lg-5" style="opacity:0.6; padding-left:2em; padding-top:7em">
                <form action="~/Client/Login" class="form-horizontal" method="post">
                    <div class="row">

                        <div class="form-group">
                            <label for="name" style="color:white" class="col-sm-4 control-label">Username/Email</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="name" name="Email" required placeholder="Full Name">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="pass" style="color:white" class="col-sm-4 control-label">Password</label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" id="pass" name="Password" required placeholder="Password">
                            </div>
                        </div>
                        
                            <div class="form-group" style="margin-left:15em"> 
                                <input type="submit" class="btn btn-success" value="Login">
                            </div>
                        


                    </div>
                </form>
            </div>
        </div>
    <div style="background-image:url(../../Content/image/subBg/bg4.jpg);text-align: center; opacity:0.8; font-size:1.4em" class="navbar-inverse bottom">
        <h3 class="list-inline small" style=" padding-top:1em; font-weight:bold;">Copyright &copy; 2015. Design by Farhan Aamir</h3>
        <h3 class="list-inline small" style=" padding-bottom:1em; font-weight:bold;">BITT12M036</h3>

    </div>
    
</body>
</html>
